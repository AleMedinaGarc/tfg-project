{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-unused-expressions": 0,
        "no-nested-ternary": 0,
        "linebreak-style": 0,
        "no-restricted-syntax": 0,
        "consistent-return": 0,
        "no-alert": 0,
        "global-require": 0,
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
        "react/prop-types": [0],
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
    }
}
